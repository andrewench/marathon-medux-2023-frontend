{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "importOrder": [
    "(.*next.*)",
    "(.*react.*)",
    "<THIRD_PARTY_MODULES>",
    "^@/components/layout",
    "^@/components/shared",
    "^@/components/ui",
    "^@/components/providers",
    "^@/shared/fonts",
    "^@/shared/utils",
    "^@/shared/types",
    "^@/",
    "^@/assets/styles/*"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
